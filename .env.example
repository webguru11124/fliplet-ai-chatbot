# Anthropic API key — get one at https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key

# Fliplet API token — generate from Fliplet Studio > Your Organisation > Settings > API tokens
FLIPLET_API_TOKEN=your-fliplet-api-token

# Fliplet App ID — the numeric ID of the app you want to query
FLIPLET_APP_ID=your-fliplet-app-id

# (Optional) Port for the Express server (default: 3000)
PORT=3000
